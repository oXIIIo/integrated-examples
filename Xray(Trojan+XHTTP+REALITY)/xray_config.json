{
  "log": {
    "loglevel": "warning",
    "error": "/var/log/xray/error.log",
    "access": "/var/log/xray/access.log"
  },
  "inbounds": [
    {
      "port": 443, //监听端口
      "protocol": "trojan",
      "settings": {
        "clients": [
          {
            "password":"diy443", //修改为自己密码
            "email": "443@gmail.com"
          }
        ]
      },
      "streamSettings": {
        "network": "xhttp",
        "security": "reality",
        "realitySettings": {
          "target": "xx.yy:443", //转发给自己选定的目标网站。目标网站使用外部的一般为 xx.yy:443 。
          "xver": 0, //选填，默认关闭 PROXY protocol 发送。
          "serverNames": [
            "xx.yy" //修改为目标网站证书对应的域名
          ], //必填，客户端可用的 serverName 列表，暂不支持 * 通配符。
          "privateKey": "iEh94AibwLpJupVCobTFGA2OKU42DHaG2ZyWcydfe1Y", //修改为自己执行 ./xray x25519 后生成的一对密钥中私钥
          "shortIds": [
            "" //若有此项，客户端 shortId 可为空。若不为空，可 0 到 f（0123456789abcdef），长度为 2 的倍数，长度上限为 16 。
          ] //必填，客户端可用的 shortId 列表，可用于区分不同的客户端。
        }
      },
      "sniffing": {
        "enabled": true,
        "destOverride": [
          "http",
          "tls",
          "quic"
        ]
      }
    }
  ],
  "routing": {
    "rules": [
      {
        "type": "field",
        "protocol": [
          "bittorrent"
        ],
        "outboundTag": "block"
      }
    ]
  },
  "outbounds": [
    {
      "protocol": "freedom",
      "settings": {}
    },
    {
      "tag": "block",
      "protocol": "blackhole",
      "settings": {}
    }
  ]
}
